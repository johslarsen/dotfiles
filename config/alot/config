[bindings]
	P = call settings.get_hook("loop_hook")(ui)
	ctrl f = move page down
	ctrl b = move page up
	u = toggletags unread
	[[search]]
		enter = select; fold *; fold *; unfold tag:unread; move newest; unfold; move first; move next unfolded
		A = toggletags inbox,unread
		s = toggletags spam; move down
		L = prompt 'search tag:'
	[[thread]]
	    a = bclose; toggletags inbox; select
		l = retagprompt
	    p = pipeto --format filepath less
		U = fold not tag:unread; unfold tag:unread
		! = toggletags flagged
	    ' ' = move next unfolded

