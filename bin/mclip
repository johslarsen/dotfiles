#!/bin/bash -
CLIPBOARD=${CLIPBOARD:-clipboard}
if [[ "$HOST" ]]; then
	url="$(ssh "$HOST" DISPLAY=:0 xclip -o -session "$CLIPBOARD")"
else
	url="$(xclip -o -session "$CLIPBOARD")"
fi
options=( --demuxer-max-bytes=8M "$@" )
if [ -t 1 ]; then
	mpv "$url" "${options[@]}"
else
	mpv "$url" "${options[@]}" &>/dev/null
fi
