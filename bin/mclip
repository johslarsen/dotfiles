#!/bin/bash -
CLIPBOARD=${CLIPBOARD:-clipboard}
if [[ "$HOST" ]]; then
	url="$(ssh "$HOST" DISPLAY=:0 xclip -o -session "$CLIPBOARD" | xargs echo)"
else
	url="$(xclip -o -session "$CLIPBOARD" | xargs echo)"
fi
if [ -t 1 ]; then
    echo "$url"
	mpv --no-ytdl "$url" "$@"
else
	mpv --no-ytdl "$url" "$@" &>/dev/null
fi
