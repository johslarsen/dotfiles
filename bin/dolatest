#!/bin/bash -
cmd=()
for arg in "$@"; do
	this=$1
	shift

	[ "$this" == "---" ] && break
	cmd[${#cmd}]="$this"
done



directories=( "$@" )
[ ${#directories} -eq 0 ] && directories=.

files=()
for dir in "${directories[@]}"; do
	if [ -d "$dir" ]; then
		files[${#files}]="$dir/$(ls -rt "$dir" | tail -1)"
	else
		files[${#files}]="$dir"
	fi
done

"${cmd[@]:?Usage: $0 CMDLINE [--- DIR/FILE...]}" "${files[@]}"
