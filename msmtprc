defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
host smtp.gmail.com
user johs.a.larsen@gmail.com
from johs.a.larsen@gmail.com
passwordeval pass show sasl/johs.a.larsen@gmail.com 2>/dev/null
port 587

account smallsoft
host smtp.gmail.com
user johs@smallsoft.com
from johs@smallsoft.com
passwordeval pass show sasl/johs@smallsoft.com 2>/dev/null
port 587

account johslarsen
host smtp.johslarsen.net
user johs
from mail@johslarsen.net
passwordeval pass show sasl/johslarsen.net 2>/dev/null
port 465
tls_starttls off

account default : johslarsen
